<section class="site-section py-lg">
  <div class="container">
    <div class="row blog-entries element-animate">
      <div class="col-md-12 col-lg-8 main-content">
        <img src="/images/img_10.jpg" alt="Image" class="img-fluid mb-5" />
        <div class="post-meta">
          <span class="author mr-2"
            ><img src="/images/person_1.jpg" alt="Colorlib" class="mr-2" />
            <%=post.title%></span
          >&bullet;
          <span class="mr-2">
            <%=moment(post.dateCreated).format('MMM Do YY')%>
          </span>
          &bullet;
          <span class="ml-2"><span class="fa fa-comments"></span> 3</span>
        </div>
        <h1 class="mb-4"><%=post.title%></h1>
        <a class="category mb-5" href="#"> <%=post.category.category_name%></a>
        <!-- <a class="category mb-5" href="#">Travel</a> -->

        <div class="post-content-body fr-view " id="preview" >

          <%=post.content%>

        </div>

        <!-- <div class="pt-5">
          <p>
            Categories: <a href="#">Quotes</a>,
