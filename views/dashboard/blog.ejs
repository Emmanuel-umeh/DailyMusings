      <div class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title"> Recent Blogs</h4>
              </div>


              

                  
              <% if (message.length > 0) { %>
                <!-- <%= message %> -->
                 <!-- <%= message %> -->
                 <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <strong class="text-center">
                      <%= message %></strong> 
                      
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
            <% } %> 
            <% if (successMessage.length > 0) { %>
                <!-- <%= message %> -->
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong class="text-center">
                        <%= successMessage %></strong> 
                        
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
            <% } %>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table">
                    <thead class=" text-primary">
                      <th>
                        Name
                      </th>
                      <th>
                        Status
                      </th>
                      <th>
                        Views
                      </th>
                      <th>
                        Publish
                      </th>
                      <th>
                        Delete
                      </th>
                     
                    </thead>
                    <tbody>

                      <%blogs && blogs.map((blog, key) => {%>
                      <tr>
                        <td>
                          <%= blog.title %>  
                        </td>
                        <td>
                        <%= blog.status %>  
                        </td>
                        <td>
                          <%= blog.views %>  
                        </td>
                        

                        <% if (blog.status == "draft") { %>
                          <form method="post" method="POST" action="/admin-panel/<%= blog._id %>/publish?_method=PUT">
                                        
                          <td>
                            <!-- <div class="row"> -->
                                <div class="update ml-auto mr-auto">
                                  <button type="submit" class="btn btn-primary btn-round">Publish</button>
                                </div>
                              <!-- </div> -->
                        </td>

                          </form>
                          <% } %>

                        <% if (blog.status == "published") { %>
    

                          <form method="post" method="POST" action="/admin-panel/<%= blog._id %>/unpublish?_method=PUT">
                                        
                          <td>
                            <!-- <div class="row"> -->
                                <div class="update ml-auto mr-auto">
                                  <button type="submit" class="btn btn-primary btn-round">Unpublish</button>
                                </div>
                              <!-- </div> -->
                        </td>
                        </form>
                          <% } %>
                
                        </td>
                        
                        <td>
                       <a href="#">          <i style="color: red; font-size: medium;" class="nc-icon nc-simple-remove"></i></a>
                        </td>
                      </tr>

                      <% })%>
          
                    </tbody>
                  </table>
                </div>
                

                       <!-- Card footer -->
            <div class="card-footer py-4">
              <nav aria-label="...">
                <ul class="pagination justify-content-end mb-0">
                  <li class="page-item <%= Number(currentPage) == 1 ? 'disabled' : null %>">
                    <a class="page-link" href="/admin/investments?page=<%= Number(currentPage) -1 %>" tabindex="-1">
                      <i class="nc-icon nc-minimal-left"></i>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>
                  <!-- <% for (var i =1; i <=toalPages;  i++ ) { %>
                    <li class="page-item <% if (currentPage == i) { %> <%= 'active' %> <% } %>">
                        <a class="page-link " href="/admin/investments?page=<%= i %>"><%= i %></a>
                      </li>   
                    <%#  will output the numbers 1-10 %>
                    <% } %> -->


                    <% if (toalPages > 0) { %>
                      <ul class="pagination text-center">
                          <!-- <% if (currentPage == 1) { %>
                              <li class="disabled"><a>First</a></li>
                          <% } else { %>
                              <li><a href="/products/1">First</a></li>
                          <% } %> -->
                          <% var i = (Number(currentPage) > 3 ? Number(currentPage) - 1 : 1) %>
                          <% if (i !== 1) { %>
                              <li class="disabled"><a>...</a></li>
                          <% } %>
                          <% for (; i <= (Number(currentPage) + 1) && i <= toalPages; i++) { %>
                              <% if (i == currentPage) { %>
                                <li class="page-item active">
                                  <a class="page-link " href="/admin/investments?page=<%= i %>"><%= i %></a>
                                </li>   
                              <% } else { %>
                                <li class="page-item ">
                                  <a class="page-link " href="/admin/investments?page=<%= i %>"><%= i %></a>
                                </li>   
                              <% } %>
                              <% if (i == Number(currentPage) + 1 && i < toalPages) { %>
                                <li class="page-item">
                                  <a class="page-link " href="/admin/investments?page=<%= toalPages %>">...</a>
                                </li>   
                              <% } %>
                          <% } %>
                     
                      </ul>
                  <% } %>
        

                  <% if (currentPage != toalPages) { %>
                  <li class="page-item">
                    <a class="page-link" href="/admin/investments?page=<%= Number(currentPage) +1 %>" tabindex="1">
                      <i class="nc-icon nc-align-right"></i>
                      <span class="sr-only">Next</span>
                    </a>
                  </li>

                  <% } %>
                </ul>
              </nav>
            </div>
              </div>
            </div>
          </div>
     
        </div>
